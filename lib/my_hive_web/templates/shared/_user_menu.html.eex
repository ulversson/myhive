<div class="cui-topbar-item">
  <%= if assigns.current_user do %>
    <div class="dropdown cui-topbar-avatar-dropdown" id='user-data' 
      data-user-id="<%= @current_user.id %>"
      data-username="<%= @current_user.first_name <> " " <> @current_user.last_name %>"
      data-avatar='<%= MyHive.Accounts.User.chat_avatar(@current_user) %>'>
      <a href="" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <%=raw @current_user.avatar_32  %>
      </a>
    <div class="dropdown-menu dropdown-menu-right" role="menu">
      <%= link to: Routes.profile_path(@conn, :show),
        class: 'dropdown-item' do  %>
        <i class="dropdown-icon icmn-user"></i> Profile
      <% end  %>
      <a class="dropdown-item" href="/change_password">
        <i class="dropdown-icon icmn-key"></i> Change password
      </a>
      <div class="dropdown-divider"></div>
      <%= if MyHive.Accounts.is_super_admin?(assigns.current_user) do %>
        <%= link to: Routes.settings_path(@conn, :index),
          class: 'dropdown-item' do  %>
          <i class="dropdown-icon icmn-cog"></i> Settings
        <% end  %>
        <div class="dropdown-divider"></div>
      <% end %>
      <a class="dropdown-item logout" href="/logout">
        <i class="dropdown-icon icmn-exit"></i> Logout
      </a>
    </div>
  <% end  %>
</div>
