
<div class="form-group row">
  <label class="col-md-2 col-form-label">
      Name
      <span class="required">*</span>
  </label>
  <div class="col-md-6">
    <%= text_input @f, :name, class: "form-control", placeholder: "Name of company"%>
  </div>
</div>
<div class="form-group row">
  <%= label @f, "Contact name", class: "col-md-2 col-form-label" %>
  <div class="col-md-6">
    <%= text_input @f, :contact_name, class: "form-control", placeholder: "Contact name"%>
  </div>
</div>
<%= inputs_for @f, :addresses, [], fn ad -> %>
  <%= render MyHiveWeb.ContactBook.AddressView,
    "address.html", type: "InstructingParty",f: ad %>
<% end %>
