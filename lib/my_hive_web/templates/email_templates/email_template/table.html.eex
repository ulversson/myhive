<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= for template <- @templates do %>
      <tr>
          <td class="template">
            <i class="far fa-2x fa-envelope text-info fa-hover-hidden"></i>&nbsp;
            <i class="far fa-2x fa-envelope-open text-info fa-hover-show"></i>&nbsp;
            <a href="/email_template/<%= template.id %>/edit" style="font-size: 18px"
              class='cui-utils-link-underlined cui-utils-link-blue'>
              <%= template.name %>
            </a>
          </td>
          <td>
          <a class="confirm-dialog btn btn-xs btn-rounded btn-outline-danger mr-2 mb-2" 
            data-title='Remove this email template'
            data-url='/email_template/<%= template.id %>/delete'
            data-icon='fas fa-trash-alt'
            data-request-method='DELETE'
            data-text='Template will be deleted'>
            <i class="fas fa-trash-alt" aria-hidden="true"></i>
          </a>
        </td>  
      </tr>      
    <% end %>
  </tbody>
</table>