<!DOCTYPE html>
<html lang="en">
  <%= render MyHiveWeb.SharedView, "_header.html", assigns %>
  <body class="cui-config-borderless cui-menu-colorful cui-menu-left-shadow">
    <div class="cui-initial-loading"></div>
      <div class="cui-layout cui-layout-has-sider">
        <div class="cui-layout">
          <div class="cui-layout-header">
          <div class="cui-topbar anonymous">
            <div class="cui-topbar-left">
              <div class="cui-topbar-item">
                <img
                  class="cui-menu-left-logo-default"
                  src="/images/logo-orange.png"
                  style="width: 42px; height: 49px"
                  alt="my-hive logo">
              </div>
              <div class='cui-topbar-item'>
                <span><h4> my-hive </h4></span>
              </div>
            </div>
          </div>
        <div class="cui-layout-content">
          <%= render @view_module, @view_template, assigns %>
        </div>
        <div class="cui-layout-footer">
          <%= render MyHiveWeb.SharedView, "_footer_guest.html", assigns %>
        </div>
      </div>
    </div>
  </body>
</html>
